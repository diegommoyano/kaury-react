{
    "printWidth": 120,
    "tabWidth": 2,
    "overrides": [
        {
            "files": "*.js",
            "options": {
                "arrowParens": "avoid",
                "endOfLine": "crlf",
                "singleQuote": true,
                "trailingComma": "none",
                "semi": true,
                "bracketSpacing": true,
                "jsxBracketSameLine": true,
                "prettier.eslintIntegration": true
            }
        },
        {
            "files": "*.html",
            "options": {
               "jsxBracketSameLine": true
            }
        },
        {
            "files": "*.css",
            "options": {
                "singleQuote": true,
                "trailingComma": "all"
            }
        },
        {
            "files": "*.scss",
            "options": {
                "singleQuote": true,
                "trailingComma": "all"
            }
        },
        {
            "files": "*.json",
            "options": {}
        },
        {
            "files": "*.php",
            "options": {
                "braceStyle": "psr-2",
                "singleQuote": false,
                "trailingCommaPHP": "php7.2"
            }
        }
    ]
}